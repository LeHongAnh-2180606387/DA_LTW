@model IEnumerable<VoLeAnhTien_2180604444_Tuan6.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Category</th>
            <th>Picture</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td>@product.Category?.Name ?? "No Category"</td>
                <td><img src="@product.ImageUrl" alt="Alternative text" style="max-width:200px"/></td>
                <td>
                    <a asp-action="Display" asp-route-id="@product.Id">View</a> 
                   
                </td>
            </tr>
        }
    </tbody>
</table>
